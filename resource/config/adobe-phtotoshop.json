{
    "context": ["Task"],
    "identifier": "ftrack-connect-launch-adobe",
    "applicationIdentifier":"photoshop_cc_{variant}",
    "label": "Photoshop",
    "icon": "photoshop",
    "variant": "CC {version}",
    "search_path":{
        "windows": {
            "prefix":["C:\\", "Program Files.*"],
            "expression":["Adobe", "Adobe Photoshop ((?:CC )?\\d+)", "Photoshop.exe"],
            "version_expression": "(?P<version>\\d[\\d.]*)[^\\w\\d]"
        },
        "darwin": {
            "prefix":["/", "Applications"],
            "expression": ["Adobe Photoshop ((?:CC )?\\d+)", "Adobe Photoshop ((?:CC )?\\d+)\\.app"],
            "version_expression": "(?P<version>\\d[\\d.]*)[^\\w\\d]"
        }
    }
 }
