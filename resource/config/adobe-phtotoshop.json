{
    "context": ["Task"],
    "identifier": "ftrack-connect-launch-adobe",
    "applicationIdentifier":"photoshop_cc_{version}",
    "label": "Photoshop",
    "icon": "photoshop",
    "variant": "CC {version}",
    "search_path":{
        "windows": {
            "prefix":["C:\\", "Program Files.*"],
            "expressions":[["Adobe", "Adobe Photoshop ((?:CC )?\\d+)", "Photoshop.exe"]],
            "version_expression": "(?P<version>\\d[\\d.]*)[^\\w\\d]"
        },
        "darwin": {
            "prefix":["/", "Applications"],
            "expressions": [["Adobe Photoshop ((?:CC )?\\d+)", "Adobe Photoshop ((?:CC )?\\d+)\\.app"]],
            "version_expression": "(?P<version>\\d[\\d.]*)[^\\w\\d]"
        }
    }
 }
