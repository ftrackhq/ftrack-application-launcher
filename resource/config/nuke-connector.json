{
    "context": ["Task"],
    "identifier": "ftrack-connect-launch-nuke",
    "applicationIdentifier":"nuke_{version}",
    "label": "Nuke",
    "icon": "nuke",
    "variant": "{version}",
    "integrations": {
        "connector":["ftrack-connect-nuke"]
    },
    "search_path":{
        "linux": {
            "prefix":["/", "usr","local","Nuke.*"],
            "expressions":[["Nuke\\d.+"]],
            "version_expression": "Nuke(?P<version>.*)\\/.+$"
        },
        "windows": {
            "prefix":["C:\\", "Program Files.*"],
            "expressions":[["Nuke.*", "Nuke\\d.+.exe"]],
            "version_expression": "(?P<version>[\\d.]+[vabc]+[\\dvabc.]*)"

        },
        "darwin": {
            "prefix":["/", "Applications"],
            "expressions": [["Nuke.*", "Nuke\\d[\\w.]+.app"]]
        }
    }
 }
 