{
    "context": ["Project"],
    "identifier": "ftrack-connect-launch-hiero",
    "applicationIdentifier":"hiero_{version}",
    "label": "Hiero",
    "icon": "hiero",
    "variant": "{version}",
    "integrations": {
        "main":["ftrack-connect-nuke-studio"]
    },
    "search_path":{
        "linux": {
            "prefix":["/", "usr","local"],
            "expressions":[["Nuke.*", "'Nuke\\d.+'"]],
            "version_expression": "(?P<version>[\\d.]+[vabc]+[\\dvabc.]*)",
            "launch_arguments": ["--hiero"]
        },
        "windows": {
            "prefix":["C:\\", "Program Files.*"],
            "version_expression": "(?P<version>[\\d.]+[vabc]+[\\dvabc.]*)",
            "expressions":[["Nuke.*", "Nuke\\d.+.exe"]],
            "launch_arguments": ["--hiero"]
        },
        "darwin": {
            "prefix":["/", "Applications"],
            "version_expression": "Nuke(?P<version>.*)\/.+$",
            "expressions": [["Nuke.*", "Hiero\\d[\\w.]+.app"]]
        }
    }
 }
