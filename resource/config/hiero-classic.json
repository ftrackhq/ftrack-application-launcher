{
    "context": ["Project"],
    "identifier": "ftrack-connect-launch-hiero",
    "applicationIdentifier":"hiero_{version}",
    "label": "Hiero",
    "icon": "hiero",
    "variant": "{version}",
    "integrations": {
        "main":["ftrack-connect-nuke-studio"]
    },
    "search_path":{
        "linux": {
            "prefix":["/", "usr","local","Hiero.*"],
            "expressions":[["bin", "Hiero\\d.+"]],
            "version_expression": "Hiero(?P<version>.*)\/.+$"
        },
        "windows": {
            "prefix":["C:\\", "Program Files.*"],
            "expressions":[["Hiero\\d.+", "hiero.exe"]]
        },
        "darwin": {
            "prefix":["/", "Applications"],
            "version_expression": "Hiero(?P<version>.*)\/.+$",
            "expressions": [["Hiero\\d.+", "Hiero\\d.+.app"]]
        }
    }
 }
