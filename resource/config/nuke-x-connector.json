{
    "context": ["Task"],
    "identifier": "ftrack-connect-launch-nuke",
    "applicationIdentifier":"nukex_{version}",
    "label": "NukeX",
    "icon": "nukex",
    "variant": "{version}",
    "integrations": {
        "connector":["ftrack-connect-nuke"]
    },
    "search_path":{
        "linux": {
            "prefix":["/", "usr","local","Nuke.*"],
            "expressions":[["Nuke\\d.+"]],
            "version_expression": "Nuke(?P<version>.*)\\/.+$",
            "launch_arguments": ["--nukex"]
        },
        "windows": {
            "prefix":["C:\\", "Program Files.*"],
            "expressions":[["Nuke.*", "Nuke\\d.+.exe"]],
            "version_expression": "(?P<version>[\\d.]+[vabc]+[\\dvabc.]*)",
            "launch_arguments": ["--nukex"]
        },
        "darwin": {
            "prefix":["/", "Applications"],
            "expressions": [["Nuke.*", "NukeX\\d[\\w.]+.app"]]
        }
    }
 }
 