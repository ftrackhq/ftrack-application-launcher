{
    "context": ["Task"],
    "identifier": "ftrack-connect-launch-nuke-indie",
    "applicationIdentifier":"nuke_indie_{variant}",
    "label": "Nuke_Indie",
    "icon": "nuke",
    "variant": "{version}",
    "integrations": {
        "pipeline":[
            "ftrack-connect-pipeline",
            "ftrack-connect-pipeline-qt",
            "ftrack-connect-pipeline-definition",
            "ftrack-connect-pipeline-nuke"
        ]
    },
    "search_path":{
        "linux": {
            "prefix":["/", "usr","local","Nuke.*"],
            "expression":["Nuke\\d.+"],
            "version_expression": "Nuke(?P<version>.*)\\/.+$",
            "launch_arguments": ["--indie"]
        },
        "windows": {
            "prefix":["C:\\", "Program Files.*"],
            "expression":["Nuke.*", "Nuke\\d.+.exe"],
            "version_expression": "(?P<version>[\\d.]+[vabc]+[\\dvabc.]*)",
            "launch_arguments": ["--indie"]
        },
        "darwin": {
            "prefix":["/", "Applications"],
            "expression": ["Nuke.*", "NukeIndie\\d[\\w.]+.app"]
        }
    }
 }
