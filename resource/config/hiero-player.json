{
    "context": ["Project"],
    "identifier": "ftrack-connect-launch-hiero-player",
    "applicationIdentifier":"hiero_player_{variant}",
    "label": "Hiero Player",
    "icon": "hieroplayer",
    "variant": "{version}",
    "integrations": {
        "main":["ftrack-connect-nuke-studio"]
    },
    "search_path":{
        "linux": {
            "prefix":["/", "usr","local","Nuke.*"],
            "expression":["Nuke\\d.+"],
            "version_expression": "Nuke(?P<version>.*)\\/.+$",
            "launch_arguments": ["--player"]
        },
        "windows": {
            "prefix":["C:\\", "Program Files.*"],
            "version_expression": "(?P<version>[\\d.]+[vabc]+[\\dvabc.]*)",
            "expression":["Nuke.*", "Nuke\\d.+.exe"],
            "launch_arguments": ["--player"]
        },
        "darwin": {
            "prefix":["/", "Applications"],
            "version_expression": "Nuke(?P<version>.*)\/.+$",
            "expression": ["Nuke.*", "Hiero\\d[\\w.]+.app"]
        }
    }
 }
